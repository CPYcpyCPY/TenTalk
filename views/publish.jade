extends layout

block content
  link(href='/css/publish.css', rel="stylesheet")
  link(href='/framework/vue-material.css', rel="stylesheet")
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  script(src="/framework/vue-material.js")
  div#app
    div#form
      h2#title {{text}}
      md-input-container
        label 物品名称
        md-input(v-model="store.name")
      .err {{err.name}}
      md-input-container
        label 价格(元)
        md-input(v-model="store.price")
      .err {{err.price}}
      md-input-container
        label 物品描述
        md-textarea(v-model="store.description", maxlength='50')
      .err {{err.description}}
      div#add
        div#add-photo
          span 添加图片
          md-button.md-icon-button.md-raised.md-accent(@click.native="selectImg")
            md-icon add
        div#photos
          div.imgBox(v-for="index in [0, 1, 2, 3]")
            img(v-if="images[index]", :src="images[index].url")
      md-button.md-raised.md-primary#submit(@click.native="submit") 发布
  script(src="/js/publish.js")
